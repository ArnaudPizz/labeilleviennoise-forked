generator client {
  provider = "prisma-client-js"
  output   = "../app/prisma-client"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String
}

model blog_posts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  slug String @unique
  title String
  description String
  markdown String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
