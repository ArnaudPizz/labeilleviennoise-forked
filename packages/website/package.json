{
  "name": "@labeilleviennoise/website",
  "version": "0.15.0",
  "private": true,
  "sideEffects": false,
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "scripts": {
    "prepare": "concurrently -n css,prisma \"pnpm build:css\" \"npx prisma generate\"",
    "build": "concurrently -n build,prisma \"pnpm build:css && remix build\" \"pnpm db:seed\" --kill-others-on-fail",
    "build:css": "pnpm build:css:prepare -m",
    "build:css:prepare": "tailwindcss -i ./app/assets/styles/app.css -o app/assets/styles/app.generated.css",
    "db:seed": "npx prisma db seed",
    "dev": "concurrently -n css,remix \"pnpm dev:css\" \"remix dev\"",
    "dev:css": "pnpm build:css:prepare -w",
    "start": "cross-env NODE_ENV=production netlify dev",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx,mjs,cjs}\"",
    "lint:fix": "pnpm lint --fix",
    "lint-staged": "lint-staged",
    "test": "pnpm test:unit",
    "test:unit": "jest"
  },
  "dependencies": {
    "@labeilleviennoise/auth": "workspace:*",
    "@netlify/functions": "^1.3.0",
    "@prisma/client": "^4.8.0",
    "@remix-run/netlify": "^1.9.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "domain-functions": "^1.5.1",
    "imagekitio-react": "^2.0.0",
    "nodemailer": "^6.8.0",
    "react-hook-form": "^7.41.0",
    "remix-forms": "^1.4.0",
    "remix-typedjson": "^0.1.6",
    "showdown": "^2.1.0",
    "tailwind-merge": "^1.8.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@labeilleviennoise/eslint-config": "workspace:*",
    "@labeilleviennoise/prettier-config": "workspace:*",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "@remix-run/server-runtime": "^1.9.0",
    "@tailwindcss/typography": "^0.5.8",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/showdown": "^2.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "flowbite": "^1.5.5",
    "flowbite-react": "^0.3.7",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "prettier": "^2.8.1",
    "prisma": "^4.8.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": "pnpm eslint --cache --fix",
    "*": "prettier -w -u"
  },
  "engines": {
    "node": ">=14"
  }
}
