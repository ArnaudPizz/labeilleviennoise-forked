---
import FooterLink from './footer-link.astro';
import NavigationFooterSocialNetworkLink from './navigation-footer-social-network-link.astro';
import IconFacebook from '@/modules/shared/icons/icon-facebook.astro';
import IconInstagram from '@/modules/shared/icons/icon-instagram.astro';
import LogoWithTextInline from '@/modules/shared/logo/logo-with-text-inline.astro'
---
<footer class="p-4 bg-white sm:p-6 dark:bg-gray-800">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="/">
          <LogoWithTextInline />
        </a>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6">
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Ressources</h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-4">
              <FooterLink href="/">Accueil</FooterLink>
            </li>
            <li class="mb-4">
              <FooterLink href="/faq">Foire aux questions</FooterLink>
            </li>
            <li>
              <FooterLink href='/contact'>Contactez-nous</FooterLink>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Entreprise</h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li>
              <FooterLink href="/mentions-legales">Mentions légales</FooterLink>
            </li>
            <li>
              <FooterLink href="/conditions-generales-vente">Conditions Générales de Vente</FooterLink>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"/>

    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">
        © {new Date().getFullYear()} <FooterLink href="/">L'Abeille Viennoise</FooterLink>. Tous droits réservés.
      </span>
      <div class="flex mt-4 space-x-6 sm:justify-center sm:mt-0">
        <NavigationFooterSocialNetworkLink href={import.meta.env.PUBLIC_FACEBOOK_URL}>
          <IconFacebook />
        </NavigationFooterSocialNetworkLink>
        <NavigationFooterSocialNetworkLink href={import.meta.env.PUBLIC_INSTAGRAM_URL}>
          <IconInstagram />
        </NavigationFooterSocialNetworkLink>
      </div>
    </div>
  </div>
</footer>
