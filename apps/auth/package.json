{
  "name": "auth.labeilleviennoise.com",
  "description": "Authentification module for l'Abeille Viennoise",
  "version": "0.15.0",
  "private": true,
  "sideEffects": false,
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "scripts": {
    "prepare": "pnpm build:css",
    "build": "pnpm build:css && remix build",
    "build:css": "pnpm build:css:prepare -m",
    "build:css:prepare": "tailwindcss -i ./app/assets/styles/app.css -o app/assets/styles/app.generated.css",
    "dev": "concurrently \"pnpm:dev:css\" \"pnpm:dev:remix\"",
    "dev:css": "pnpm build:css:prepare -w",
    "dev:remix": "cross-env PORT=3001 remix dev",
    "start": "cross-env NODE_ENV=production netlify dev",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx,mjs,cjs}\"",
    "lint:fix": "pnpm lint --fix",
    "lint-staged": "lint-staged",
    "test": "pnpm test:unit",
    "test:unit": "jest"
  },
  "dependencies": {
    "@labeilleviennoise/auth": "workspace:*",
    "@labeilleviennoise/catch-boundary": "workspace:*",
    "@labeilleviennoise/layouts": "workspace:*",
    "@labeilleviennoise/seo": "workspace:*",
    "@labeilleviennoise/ui": "workspace:*",
    "@labeilleviennoise/router": "workspace:*",
    "@netlify/functions": "^1.3.0",
    "@prisma/client": "^4.8.0",
    "@remix-run/netlify": "^1.9.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "domain-functions": "^1.5.1",
    "remix-typedjson": "^0.1.6",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@labeilleviennoise/eslint-config": "workspace:*",
    "@labeilleviennoise/prettier-config": "workspace:*",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@remix-run/serve": "^1.9.0",
    "@remix-run/server-runtime": "^1.9.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "prettier": "^2.8.1",
    "prisma": "^4.8.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": "pnpm eslint --cache --fix",
    "*": "prettier -w -u"
  },
  "engines": {
    "node": ">=14"
  }
}
